<div class="col-sm-6 col-md-2 no-margin product-item-holder hover">
   <div class="product-item">
      <div class="image">
         <a href="{url}">
            <img alt="{name}" src="{img_path}" />
         </a>
      </div>
      <div class="body">
         <div class="label-discount clear"></div>
         <div class="title text-center">
            <a href="{url}">{name}</a>
         </div>
      </div>
      <div class="prices">
         <div class="price-prev"></div>
         <div class="price-current pull-right">{price}</div>
      </div>
      <div class="hover-area">
         <div class="add-cart-button">
            {to_cart_button}
         </div>
         <div class="wish-compare">
            <a class="btn-add-to-wishlist" href="#"></a>
            <a class="btn-add-to-compare" href="#"></a>
         </div>
      </div>
   </div>
</div>
