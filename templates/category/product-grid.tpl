<div class="col-xs-12 col-sm-4 no-margin product-item-holder hover">
   <div class="product-item">
      <!--div class="ribbon red"><span>распродажа</span></div-->
      <div class="label-discount clear"></div>
      <div class="image">
         <img alt="{prod_name}" src="{img_path}" width="200" />
      </div>
      <div class="body">
         <!--div class="label-discount green">-50% sale</div-->
         <div class="title">
            <a href="{prod_url}">{prod_name}</a>
         </div>
         <div class="brand">{prod_brand}</div>
      </div>
      <div class="prices">
         <div class="price-prev"></div>
         <div class="price-current pull-right">{prod_price}</div>
      </div>
      <div class="hover-area">
         <div class="add-cart-button">
            <a href="single-product.html" class="le-button">В корзину</a>
         </div>
         <div class="wish-compare">
            <a class="btn-add-to-wishlist" href="#">в желаемое</a>
            <a class="btn-add-to-compare" href="#">сравнить</a>
         </div>
      </div>
   </div>
</div>
