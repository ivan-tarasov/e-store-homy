<section id="banner-holder" class="wow fadeInDown animated">
   <div class="container">
      <div class="row">

         <div class="col-md-12 banner">
            <a href="{url}">
               <div class="banner-text text-left the{color}">
                  <h1>{title}</h1>
                  <span class="tagline">{description}</span>
               </div>
               <img src="/img/promo/{id}.jpg" class="banner-image img-responsive" alt="{title}. {description}" />
            </a>
         </div>

      </div>
   </div>
</section>
