<div class="no-margin carousel-item product-item-holder size-small hover">
   <div class="product-item">
      <!--div class="ribbon red"><span>распродажа</span></div-->
      <div class="image">
         <a href="{url}">
            <img alt="" src="{photo}" />
         </a>
      </div>
      <div class="body">
         <div class="title">
            <a href="{url}">{name}</a>
         </div>
         <div class="brand">{brand}</div>
      </div>
      <div class="prices">
         <div class="price-current text-right">{price}</div>
      </div>
      <div class="hover-area">
         <div class="add-cart-button">
            {to_cart_button}
         </div>
         <div class="wish-compare">
            <a class="btn-add-to-wishlist" href="#">В желаемое</a>
            <a class="btn-add-to-compare" href="#">Сравнить</a>
         </div>
      </div>
   </div>
</div>
